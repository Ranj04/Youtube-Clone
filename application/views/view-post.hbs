<section class="video-player">
  <div class="video-container">
    <iframe src="{{post.video_url}}" frameborder="0" allowfullscreen></iframe>
  </div>
  <div class="video-details">
    <h2>{{post.title}}</h2>
    <p class="author">Posted by {{post.author}}</p>
    {{#if post.description}}
      <p class="description">{{post.description}}</p>
    {{/if}}
  </div>
</section>

<section class="comments-section">
  <h3>Comments</h3>

  {{#if userId}}
    <form action="/posts/{{post.id}}/comments" method="POST" class="comment-form">
      <div class="form-group">
        <textarea name="comment_text" placeholder="Add a comment..." required></textarea>
      </div>
      <button type="submit">Post Comment</button>
    </form>
  {{else}}
    <p class="login-prompt"><a href="/users/login">Login</a> to leave a comment.</p>
  {{/if}}

  <div class="comments-list">
    {{#if comments.length}}
      {{#each comments}}
        <div class="comment">
          <p class="comment-author">{{this.username}}</p>
          <p class="comment-text">{{this.comment_text}}</p>
        </div>
      {{/each}}
    {{else}}
      <p class="no-content">No comments yet. Be the first to comment!</p>
    {{/if}}
  </div>
</section>
